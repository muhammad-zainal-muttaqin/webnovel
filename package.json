{
  "name": "webnovel",
  "version": "1.0.0",
  "description": "Platform ini dibangun bertahap agar cepat meluncurkan pengalaman membaca dasar, lalu berkembang ke fitur sinkronisasi dan akhirnya migrasi ke framework SSR penuh ketika diperlukan.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "lint": "eslint . --ext .ts,.js,.vue",
    "lint:content": "npm run validate:content",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "validate:content": "tsx scripts/validate-content.ts",
    "test": "npm run lint",
    "check": "npm run lint && npm run typecheck && npm run validate:content"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "engines": {
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@eslint/eslintrc": "^3.3.1",
    "@types/node": "^24.7.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.5.0",
    "globals": "^16.4.0",
    "gray-matter": "^4.0.3",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0",
    "vitepress": "^1.6.4",
    "vue": "^3.5.22",
    "vue-eslint-parser": "^10.2.0"
  }
}
